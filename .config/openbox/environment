pkill ssh-agent
eval $(ssh-agent)
export SSH_ASKPASS=/usr/bin/lxqt-openssh-askpass

# For OpenBox I set up the Qt themes in LxQt, then do this.
export QT_QPA_PLATFORMTHEME=lxqt

# Needed to get the binary Calibre packages to work with the TV
# I'm using as a monitor.
export QT_AUTO_SCREEN_SCALE_FACTOR=0
