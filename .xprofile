# For FISH on Slackware with Plasma 5. The files in /etc/profile.d aren't
# normally sourced if you're running sddm and FISH. This causes Plasma 5
# to boot to a black window.
. /etc/profile

export PATH=$PATH:$HOME/.local/bin

export DOOMWADDIR="$HOME/Software/doomwads"
export SDL_SOUNDFONTS="$HOME/.config/gzdoom/soundfonts/FatBoy-v0.786.sf2"

export PAGER="less -R"
export MANPAGER=most
export EDITOR=vim
